<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyMyMainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/my_background"/>
    <ImageView
        android:id="@+id/iv_common_icon_back_black_n"
        android:scaleType="centerCrop"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/common_icon_back_black_n"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/iv_ling"
        android:scaleType="centerCrop"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/common_nav_message_black_s"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/iv_touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/iv_common_icon_back_black_n"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/iv_common_icon_back_black_n"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欧若拉"
        android:layout_toRightOf="@id/iv_touxiang"
        android:layout_alignBottom="@id/iv_touxiang"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#E6F0FB"/>
    <Buttonhi
        android:id="@+id/bt_qiandao"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:background="@drawable/yuan"
        android:text="签到"
        android:layout_alignBottom="@id/tv_name"
        android:layout_alignRight="@id/iv_ling"/>
</RelativeLayout>