<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:id="@+id/top_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:src="@mipmap/xiaoren"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="@dimen/dp_32"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/aaa"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@mipmap/lingdangwudianbai"
                    android:layout_height="@dimen/dp_24"/>
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/hongdian"
                    android:layout_toRightOf="@+id/aaa"
                    android:id="@+id/hongdian"
                    android:layout_marginLeft="-29dp"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_height="18dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/top_two"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="急诊科"
                    android:textSize="18sp"
                    android:textColor="#3087ea"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="@dimen/dp_210"
                    android:hint="请输入病状的关键字"
                    android:textSize="12sp"
                    android:id="@+id/patient_fragment_etsearch"
                    android:paddingLeft="@dimen/dp_10"
                    android:background="@drawable/sou_bian"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/dp_28"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/aaa_two"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@mipmap/lingdangwudianbai"
                    android:layout_height="@dimen/dp_24"/>
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/hongdian"
                    android:layout_toRightOf="@+id/aaa_two"
                    android:id="@+id/hongdian_two"
                    android:layout_marginLeft="-29dp"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_height="18dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#F2F2F2"
            android:layout_height="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ll_gone"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_50" >
            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/re_one"
                android:layout_height="match_parent"
                />

            <View
                android:layout_width="@dimen/dp_1"
                android:background="#000"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_25" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:id="@+id/patient_fragment_search"
                android:src="@mipmap/patient_search"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="@dimen/dp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#F2F2F2"
            android:layout_height="8dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/re"
            android:background="#F2F2F2"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp25"
        android:src="@mipmap/common_tab_circle_s"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/patient_fragment_write"
        android:layout_height="@dimen/dp25" />
</RelativeLayout>