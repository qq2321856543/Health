<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="12dp"
       android:id="@+id/rl"
       android:layout_marginRight="12dp"
       android:layout_height="match_parent">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:id="@+id/tv_home_item_name"
           android:textColor="#333333"/>
       <com.facebook.drawee.view.SimpleDraweeView
           android:layout_marginTop="10dp"
           fresco:placeholderImage="@mipmap/ic_launcher"
           android:layout_below="@id/tv_home_item_name"
           android:layout_width="100dp"
           android:id="@+id/iv_home_item"
           android:layout_height="74dp" />
       <com.facebook.drawee.view.SimpleDraweeView
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@id/iv_home_item"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/tv_home_item_name"
           android:layout_width="100dp"
           android:id="@+id/iv_home_item2"
           android:layout_height="74dp" />
       <com.facebook.drawee.view.SimpleDraweeView
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@id/iv_home_item2"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/tv_home_item_name"
           android:layout_width="100dp"
           android:id="@+id/iv_home_item3"
           android:layout_height="74dp" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_home_item_author"
           android:layout_below="@id/iv_home_item"
           android:layout_marginTop="10dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#333333"
           android:layout_above="@id/line"
           android:layout_alignParentRight="true"
           android:id="@+id/tv_home_item_time"
           android:textSize="10sp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#999999"
           android:layout_marginTop="10dp"
           android:id="@+id/line"
           android:layout_below="@id/tv_home_item_author"></View>
   </RelativeLayout>
</RelativeLayout>