<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeInformationActivity">
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="22dp"
        android:id="@+id/iv_home_detail_back"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/home_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资讯详情"
        android:textSize="16sp"
        android:id="@+id/tv"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_home_detail_message"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/home_message_null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:orientation="horizontal"
        android:layout_below="@id/tv"
        android:id="@+id/ll"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#F1F1F1"></LinearLayout>
    <ImageView
        android:layout_width="40dp"
        android:src="@mipmap/home_collection_null"
        android:layout_height="40dp"
        android:id="@+id/iv_home_detail_collection"
        android:layout_marginRight="20dp"
        android:background="@drawable/home_img"
        android:layout_alignParentRight="true"
        android:layout_above="@id/iv_home_detail_share"
        />

    <ImageView
        android:layout_width="40dp"
        android:id="@+id/iv_home_detail_share"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_img"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/home_share"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/ll"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:id="@+id/tv_home_detail_title"
                android:lineHeight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_home_detail_title"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:textColor="#333333"
                android:id="@+id/tv_home_detail_author"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_home_detail_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_home_detail_author"
                android:textSize="10sp"
                android:textColor="#333333"
                android:id="@+id/tv_home_detail_time"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:id="@+id/iv_home_detail"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_home_detail_author"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_home_detail_content"
                android:layout_below="@id/iv_home_detail"
                android:layout_marginTop="10dp"
                android:textColor="#333333"
                android:textSize="12sp"
                android:lineHeight="20dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>